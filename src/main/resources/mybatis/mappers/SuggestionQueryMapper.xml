<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.adregamdi.suggestion.query.infra.repository.SuggestionQueryMapper">

    <resultMap id="suggestionResultMap1" type="com.ohgiraffers.adregamdi.suggestion.command.domain.aggregate.entity.Suggestion" autoMapping="false">
        <id property="suggestionNo" column="SUGGESTION_NO"/>
        <result property="userNo" column="USER_NO"/>
        <result property="suggestion" column="SUGGESTION"/>
    </resultMap>

    <select id="findAllSuggestion" resultMap="suggestionResultMap1">
        SELECT
                SUGGESTION_NO
              , USER_NO
              , SUGGESTION
        FROM TBL_SUGGESTION
        ORDER BY SUGGESTION_NO
    </select>

</mapper>